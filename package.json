{
  "version": "0.0.1",
  "name": "yceffort-blog",
  "description": "yceffort-blog",
  "scripts": {
    "dev": "next dev",
    "sitemap": "ts-node --project tsconfig.node.json ./src/utils/siteMap.ts",
    "images": "ts-node --project tsconfig.node.json ./src/utils/imageInfo.ts",
    "build-nextjs": "next build",
    "build": "npm run sitemap && npm run images && npm run build-nextjs",
    "start": "next start",
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier '**/*.{json,md,yaml}' --check",
    "prettier:fix": "prettier '**/*.{json,md,yaml}' --write",
    "pre-commit": "lint-staged"
  },
  "repository": "https://github.com/yceffort/yceffort-blog-v2",
  "author": "yceffort <root@yceffort.kr>",
  "license": "MIT",
  "keywords": [
    "react",
    "nextjs",
    "blog"
  ],
  "dependencies": {
    "@mapbox/rehype-prism": "^0.6.0",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.0",
    "date-fns": "^2.23.0",
    "front-matter": "^4.0.2",
    "glob": "^7.1.6",
    "image-size": "^0.9.7",
    "memoizee": "^0.4.14",
    "next": "^11.1.0",
    "next-mdx-remote": "^3.0.4",
    "next-pwa": "^5.2.21",
    "next-seo": "^4.23.0",
    "next-themes": "0.0.15",
    "prismjs": "^1.22.0",
    "query-string": "^7.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "rehype-katex": "^5.0.0",
    "remark-math": "^3.0.0",
    "remark-prism": "^1.3.5",
    "remark-slug": "^6.0.0",
    "remark-toc": "^7.2.0",
    "tailwindcss": "^2.2.7",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "@tailwindcss/jit": "^0.1.18",
    "@types/date-fns": "^2.6.0",
    "@types/memoizee": "^0.4.5",
    "@types/node": "^14.17.9",
    "@types/react": "^17.0.16",
    "autoprefixer": "^10.3.1",
    "eslint-config-next": "^11.0.0",
    "eslint-config-yceffort": "2.0.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5",
    "webpack": "^5.49.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint",
      "git add"
    ],
    "**/*.{json,yaml,md}": [
      "prettier",
      "git add"
    ]
  }
}
